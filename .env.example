# IoT Energy Management System Configuration
# Copy this file to .env and update the values as needed

# Device Simulation Settings
DEVICE_COUNT=5
SIMULATION_INTERVAL=3
DEVICE_NAME_PREFIX=EnergyDevice

# Sensor Reading Ranges (for random generation)
CURRENT_MIN=5.0
CURRENT_MAX=20.0
TEMPERATURE_MIN=20.0
TEMPERATURE_MAX=90.0
PRESSURE_MIN=1.0
PRESSURE_MAX=3.0

# Alert Thresholds
CURRENT_ALERT_THRESHOLD=15.0
TEMPERATURE_ALERT_THRESHOLD=80.0
PRESSURE_ALERT_THRESHOLD=2.5

# Kafka Configuration (will be used later)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_IOT_TOPIC=iot-sensors
KAFKA_CONTROL_TOPIC=control-commands

# Database Configuration (will be used later)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/iot_data.db
